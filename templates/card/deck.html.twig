{% block body %}
    <h1>Card Deck</h1>
    <small> - cardGame, tillkom kmom02 -</small>
    <ul>
        <li><a href="{{ path('card') }}">Home - Card</a></li>
        <li><a href="{{ path('card/deck') }}">Deck</a></li>
